@charset "UTF-8";

@media ( min-width :770px) {
	.portNum_wrapper {
		margin: 30px 0;
		height: 500px;
	}
	.port_dl .port_dt {
		text-align: center;
		color: #40f3e3;
	}
	.port_dl .port_dd {
		padding: 15px 0;
		text-align: center;
	}
	.port_dd .portNum {
		width: 25%;
		margin: 20px auto;
	}
	#functionBtn, #clientfunctionBtn, #uploadBtn, #DownloadBtn, .musicTitle
		{
		background: #40f3e2;
		color: #fff;
		border: 1px solid #fff;
	}
	.FileUpload_wrapper {
		height: 805px;
		background: #fff;
	}
	.FileUpload_wrapper .fileUpload_row {
		margin-top: 65px;
	}
	.fileUploadTbl .fileUploadHead tr th {
		text-align: center;
		padding: 15px 0;
		color: #fff;
	}
	.uploadForm {
		margin: 15px 0;
	}
}

@media ( max-width :769px) {
	.portNum_wrapper {
		margin: 30px 0;
		height: 540px;
	}
	.portNum_wrapper .port_dl {
		padding: 20px 0;
		display: block;
	}
	.port_dl .port_dt {
		padding: 10px 0;
		font-size: 10px;
		text-align: center;
	}
	.port_dl .port_dd {
		padding: 15px 0;
		text-align: center;
	}
	.port_dd .portNum {
		width: 60%;
		font-size: 10px;
		margin: 10px auto;
	}
	#functionBtn, #clientfunctionBtn, #uploadBtn, #DownloadBtn, .musicTitle
		{
		background: #40f3e3;
		color: #fff;
		border: 1px solid #fff;
	}
	.FileUpload_wrapper {
		height: 450px;
	}
	.FileUpload_wrapper .fileUpload_row {
		margin-top: 65px;
	}
	.fileUploadTbl .fileUploadHead tr th {
		text-align: center;
		padding: 15px 0;
	}
	.uploadForm {
		margin: 20px 0;
	}
	.musicTbl thead.musicTblHead tr th {
		text-align: center;
		font-size: 10px;
	}
	.musicTbl tbody.musicTblBody tr td {
		vertical-align: middle;
		text-align: center;
		font-size: 10px;
	}
	.musicTbl tbody.musicTblBody tr td#form_parent_td .musicTitle {
		padding: 5px 2px;
		border-radius: 5px;
	}
	.MusicDownLoader_Wrapper {
		height: 390px;
	}
}
}